<project default="build">

  <target name="prep">
    <copy todir="build" file="AndroidManifest.xml" />
    <copy todir="build" file="default.properties" />
    <copy todir="build/src/com/github/tommywalsh/map">
      <fileset dir="src" />
    </copy>
    <copy todir="build/res">
      <fileset dir="res" />
    </copy>
    <exec executable="android">
      <arg value="update" />
      <arg value="project" />
      <arg value="-p" />
      <arg value="build" />
    </exec>
  </target>

  <target name="build" depends="prep">
    <ant dir="build" target="debug" />
  </target>

  <target name="install" depends="build">
    <ant dir="build" target="install" />
  </target>

  <target name="android" depends="build" />

</project>
